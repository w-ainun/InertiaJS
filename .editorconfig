root = true

[*.{tsx,jsx}]
indent_size = 2  # Menggunakan 2 spaces agar lebih kecil
max_line_length = 60  # Bantu editor untuk membungkus baris panjang

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4